  "author": "NanYang <nanyang24@hotmail.com>",
  "homepage": "https://github.com/nanyang24/Grater",
  "repository": {
    "type": "git",
    "url": "https://github.com/nanyang24/Grater"
  },
  "bugs": {
    "url": "https://github.com/nanyang24/Grater/issues"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "dev": "tsc-watch --onSuccess 'node ./dist/grater.js'",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "7.2.0",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "tsc-watch": "^4.2.9"
  }
}
